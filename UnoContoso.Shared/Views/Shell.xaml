        <StackPanel Margin="20">
            <TextBlock Text="{Binding Title}" FontSize="30" />
            <TextBlock Text="Welcome to Uno/WinUI and Prism!" FontSize="15" />
        </StackPanel>
        <ContentControl Grid.Row="1" prismRegions:RegionManager.RegionName="ContentRegion" />-->
    </Grid>
</ContentControl>
